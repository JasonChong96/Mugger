<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bojio.mugger">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/travel_mug"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".authentication.GoogleLoginActivity" />
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".listings.CreateEditListingActivity" />
        <activity android:name=".listings.AvailableListingDetailsActivity" />
        <activity android:name=".authentication.IvleLoginActivity" />
        <activity android:name=".listings.chat.ListingChatActivity" />

        <service
            android:name=".fcm.InstanceIdService"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".fcm.MessagingService"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".administration.MakeTAProfActivity"
            android:theme="@style/AppTheme.Admin"/>
        <activity android:name=".administration.ChangeMuggerRoleActivity"
            android:theme="@style/AppTheme.Admin"/>
        <activity android:name=".settings.SettingsActivity" />
        <activity
            android:name=".settings.SettingsActivity2"
            android:label="@string/title_activity_settings2" />
        <activity android:name=".administration.feedback.MakeFeedbackActivity" />
        <activity android:name=".administration.feedback.ViewAllFeedbackActivity"
            android:theme="@style/AppTheme.Admin"/>
    </application>

</manifest>