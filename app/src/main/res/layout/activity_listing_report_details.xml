<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administration.reports.ListingReportDetailsActivity">

    <TextView
        android:id="@+id/listing_report_details_reported_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listing_report_details_reporter_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/listing_report_details_reported_name"
        app:layout_constraintTop_toBottomOf="@+id/listing_report_details_reported_name" />

    <TextView
        android:id="@+id/listing_report_details_venue_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Venue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/listing_report_details_reporter_name"
        app:layout_constraintTop_toBottomOf="@+id/listing_report_details_reporter_name" />

    <TextView
        android:id="@+id/listing_report_details_venue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/listing_report_details_venue_label"
        app:layout_constraintTop_toBottomOf="@+id/listing_report_details_venue_label" />

    <TextView
        android:id="@+id/listing_report_details_listing_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Listing Description"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/listing_report_details_venue"
        app:layout_constraintTop_toBottomOf="@+id/listing_report_details_venue" />

    <TextView
        android:id="@+id/listing_report_details_listing_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/listing_report_details_listing_description_label"
        app:layout_constraintTop_toBottomOf="@+id/listing_report_details_listing_description_label" />

    <TextView
        android:id="@+id/listing_report_details_report_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Report Description"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/listing_report_details_listing_description"
        app:layout_constraintTop_toBottomOf="@+id/listing_report_details_listing_description" />

    <TextView
        android:id="@+id/listing_report_details_report_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/listing_report_details_report_description_label"
        app:layout_constraintTop_toBottomOf="@+id/listing_report_details_report_description_label" />

    <android.support.design.button.MaterialButton
        android:id="@+id/listing_report_details_reported_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Reported Profile"
        app:icon="@drawable/ic_baseline_person_24px"
        app:layout_constraintStart_toStartOf="@+id/listing_report_details_report_description"
        app:layout_constraintTop_toBottomOf="@+id/listing_report_details_report_description" />

    <android.support.design.button.MaterialButton
        android:id="@+id/listing_report_details_reporter_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Reporter Profile"
        app:icon="@drawable/ic_baseline_person_24px"
        app:layout_constraintStart_toStartOf="@+id/listing_report_details_reported_profile_button"
        app:layout_constraintTop_toBottomOf="@+id/listing_report_details_reported_profile_button" />

    <android.support.design.button.MaterialButton
        android:id="@+id/listing_report_details_listing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View Listing"
        app:icon="@drawable/ic_baseline_details_24px"
        app:layout_constraintStart_toStartOf="@+id/listing_report_details_reporter_profile_button"
        app:layout_constraintTop_toBottomOf="@+id/listing_report_details_reporter_profile_button" />
</android.support.constraint.ConstraintLayout>