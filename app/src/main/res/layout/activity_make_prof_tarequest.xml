<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administration.requests.MakeProfTARequestActivity">

    <Button
        android:id="@+id/request_profta_button"
        style="@android:style/ButtonBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Submit Request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/request_profta_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Description. \nPlease provide any link to proof or email us directly at mugger@muggerapp.com."
        android:inputType="text|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/request_profta_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/request_profta_description_label"
        app:layout_constraintTop_toBottomOf="@+id/request_profta_description_label" />

    <TextView
        android:id="@+id/request_profta_description_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="Description"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/request_profta_role_spinner"
        app:layout_constraintTop_toBottomOf="@+id/request_profta_role_spinner" />

    <TextView
        android:id="@+id/request_profta_module_code_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Module Code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/request_profta_module_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="e.g GER1000"
        android:inputType="text|textCapCharacters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/request_profta_module_code_label"
        app:layout_constraintTop_toBottomOf="@+id/request_profta_module_code_label" />

    <TextView
        android:id="@+id/request_profta_role_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Role"
        app:layout_constraintStart_toStartOf="@+id/request_profta_module_code"
        app:layout_constraintTop_toBottomOf="@+id/request_profta_module_code" />

    <Spinner
        android:id="@+id/request_profta_role_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/request_profta_role_label"
        app:layout_constraintTop_toBottomOf="@+id/request_profta_role_label" />
</android.support.constraint.ConstraintLayout>