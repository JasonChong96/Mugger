<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administration.reports.ChatReportDetailsActivity">

    <TextView
        android:id="@+id/chat_report_reported_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/chat_report_reported_profile_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_report_reporter_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/chat_report_reported_profile_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/chat_report_reported_name"
        app:layout_constraintTop_toBottomOf="@+id/chat_report_reported_name" />

    <TextView
        android:id="@+id/chat_report_message_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Message:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/chat_report_reporter_name"
        app:layout_constraintTop_toBottomOf="@+id/chat_report_reporter_name" />

    <TextView
        android:id="@+id/chat_report_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/chat_report_reporter_profile_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/chat_report_message_label"
        app:layout_constraintTop_toBottomOf="@+id/chat_report_message_label" />

    <Button
        android:id="@+id/chat_report_reported_profile_button"
        android:drawableStart="@drawable/ic_baseline_person_24px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Reported's Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chat_report_reported_name" />

    <Button
        android:id="@+id/chat_report_reporter_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_person_24px"
        android:layout_marginTop="8dp"
        android:text="Reporter's Profile"
        app:layout_constraintStart_toStartOf="@+id/chat_report_reported_profile_button"
        app:layout_constraintTop_toBottomOf="@+id/chat_report_reported_profile_button" />

    <Button
        android:id="@+id/chat_report_chat_button"
        android:drawableStart="@drawable/ic_baseline_chat_24px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View Chat"
        app:layout_constraintStart_toStartOf="@+id/chat_report_reporter_profile_button"
        app:layout_constraintTop_toBottomOf="@+id/chat_report_reporter_profile_button" />

    <TextView
        android:id="@+id/chat_report_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Report Description"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/chat_report_message"
        app:layout_constraintTop_toBottomOf="@+id/chat_report_message" />

    <TextView
        android:id="@+id/chat_report_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/chat_report_chat_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/chat_report_description_label"
        app:layout_constraintTop_toBottomOf="@+id/chat_report_description_label" />

</android.support.constraint.ConstraintLayout>