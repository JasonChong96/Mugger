<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryAdmin</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAdmin</item>
        <item name="colorAccent">@color/colorAccentAdmin</item>
        <item name="android:colorBackground">@color/colorBackgroundAdmin</item>
        <item name="android:buttonStyle">@style/ButtonColorAdmin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textInputStyle">@style/TextInputTextStyle</item>
        <item name="md_dark_theme">true</item>
        <item name="md_background_color">@color/cardViewColorAdmin</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@color/colorBackgroundAdmin</item>
        <item name="actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="AppTheme.HelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:textColor">?android:textColorHintInverse</item>
    </style>

    <style name="SpotsDialog" parent="Base.Theme.MaterialComponents.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/colorAccentAdmin</item>
        <item name="android:background">@color/cardViewColorAdmin</item>
    </style>

    <style name="TextInputTextStyle" parent="@style/Theme.MaterialComponents">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Main2" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.Admin" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:popupBackground">@color/colorBackgroundAdmin</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:backgroundTint">@color/cardViewColorAdmin</item>
    </style>

    <style name="SendFabTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorBackground</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ButtonColorAdmin" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorAccentAdmin</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonColor" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorBackgroundAdmin</item>
    </style>

    <style name="ButtonBorder" parent="Widget.AppCompat.Button.Colored" />

    <style name="ButtonBorder.Accent">
        <item name="android:background">@drawable/bg_btn_outline</item>
        <item name="android:textColor">@color/colorAccentAdmin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="FilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">?attr/colorAccent</item>
    </style>
</resources>
